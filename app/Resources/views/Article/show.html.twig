{% extends 'layout.html.twig' %}

{% block body %}

    <section class="article-title">
        <h2><a href="{{ path('show_article', {'slug': article.slug}) }}">{{ article.title }}</a></h2>
        <span class="category">
            Category:[<a href="{{ path('article_list_by_category', {'slug':article.category.slug}) }}">{{ article.category }}</a>]
        </span>
    </section>

    <div class="date">
        <time>{{ article.dateCreated|date('l, F j, Y') }}</time>
    </div>

    {% if article.imageName %}
        <img class="article-image" src="{{ asset('articles/'~ article.imageName )}}">
    {% endif %}

    <div>
        <p>{{ article.content }}</p>
    </div>

    <footer class="meta">
        <p>Posted by {% for user in article.users %}
            <span class="author">
                <a href="{{ path('article_list_by_author', {'slug':user.slug}) }}">{{ user }}</a>
            </span> {% endfor %} at {{ article.dateCreated|date('h:iA') }}</p>

        {% if article.tags|length > 0 %}
            <p>Tags: {% for tag in article.tags %}
                    <span class="tag">
                        <a href="{{ path('article_list_by_tag', {'slug':tag.slug}) }}">#{{ tag }}</a>
                    </span> {% endfor %}</p>
        {% endif %}
    </footer>

    <h3><a name="comments"></a>Comments</h3>

    {% for comment in comments %}
        {% if(comment.parent == null) %}
            <section class="comment">
                {% if not comment.author.avatar %}
                    <img src="{{ asset('avatars/no_avatar.jpg') }}">
                {% else %}
                    <img src="{{ asset('avatars/'~ comment.author.avatar )}}">
                {% endif %}

                <div class="comment-header">
                    <p><span id="login">{{ comment.author.login }}</span> <span id="date">{{ comment.dateCreated|date('j.m.Y, G:i') }}</span>
                        <a href="{{ path('comment_delete', {'id':comment.id}) }}"><span class="glyphicon glyphicon-remove"></span></a></p>
                </div>

                <div class="comment-content">
                    <p>{{ comment.content }}</p>
                </div>

                <input type="button" class="button btn btn-default btn-xs" value="Answer" onClick='location.href="{{ path('subcomment_create', {'comment_id': comment.id,
                        'article_id':comment.article.id }) }}"'>
            </section>

            <div class="subcomment">{% include 'Comment/comments.html.twig' with {'comments':comment.children} %}</div>

        {% endif %}
    {% endfor %}

    <section class="add-comment">
        <h3>Add new Comment</h3>
        {{ render(controller('AppBundle:Comment:create',{ 'article_id': article.id })) }}
    </section>

{% endblock %}